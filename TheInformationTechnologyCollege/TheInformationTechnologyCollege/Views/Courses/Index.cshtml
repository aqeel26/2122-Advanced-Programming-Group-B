@model IEnumerable<TheInformationTechnologyCollege.Models.Course>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>
                <td>

                    @Html.ActionLink("Details", "Details", new { id = item.CourseID }) |

                </td>
            </tr>
        }

    </table>
    <br />
    <img src="~/images/schoolMeal.png" height="250" width="550" />
</body>
</html>
